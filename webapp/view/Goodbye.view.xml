<?xml version="1.0" encoding="UTF-8"?>
<mvc:View
  controllerName="sap.vic.dashboard.controller.Dashboard"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns="sap.m"
  xmlns:core="sap.ui.core"
  displayBlock="true">
  <Page showHeader="false">
    <content>
      <!-- Fullscreen confetti canvas overlay -->
      <core:HTML content="<canvas id='goodbyeConfetti' style='position:fixed; inset:0; pointer-events:none; z-index: 9999;'></canvas>" />
      <VBox class="goodbyeContainer" width="100%">
        <Text text="thank you for using VIC have a wonderful day" class="goodbyeMessage" />
      </VBox>
    </content>
  </Page>
</mvc:View>
